{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "description": "node boilerplate",
  "main": "index.js",
  "scripts": {
    "build-sass": "sass src/public/css/main.scss dist/public/css/main.css",
    "build-ts": "tsc",
    "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve-debug": "nodemon --inspect dist/server.js",
    "serve": "node dist/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-sass": "sass --watch src/public/css/main.scss dist/public/css/main.css",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "doc": "ts-node tools/typedoc.ts",
    "doc:serve": "serve docs",
    "coverage:serve": "serve coverage/lcov-report",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "author": "Gaurav Bharti",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "16.1.0",
    "@commitlint/config-conventional": "16.0.0",
    "@types/async": "3.2.12",
    "@types/bcrypt": "5.0.0",
    "@types/body-parser": "1.19.2",
    "@types/chai": "4.3.0",
    "@types/compression": "1.7.2",
    "@types/concurrently": "6.4.0",
    "@types/connect-mongo": "3.1.3",
    "@types/cors": "2.8.12",
    "@types/dotenv": "8.2.0",
    "@types/errorhandler": "1.5.0",
    "@types/eslint": "8.4.1",
    "@types/express": "4.17.13",
    "@types/express-flash": "0.0.2",
    "@types/express-session": "1.17.4",
    "@types/express-validator": "3.0.0",
    "@types/jest": "27.4.0",
    "@types/jquery": "3.5.11",
    "@types/jsonwebtoken": "8.5.8",
    "@types/lusca": "1.7.1",
    "@types/mongoose": "5.11.97",
    "@types/node": "17.0.5",
    "@types/nodemon": "1.19.1",
    "@types/shelljs": "0.8.10",
    "@types/supertest": "2.0.11",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/swagger-ui-express": "4.1.3",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "chai": "4.3.4",
    "concurrently": "7.0.0",
    "eslint": "8.8.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "lint-staged": "12.3.1",
    "nodemon": "2.0.15",
    "prettier": "2.5.1",
    "sass": "1.49.4",
    "serve": "13.0.2",
    "supertest": "6.2.2",
    "ts-jest": "27.1.3",
    "ts-node": "10.4.0",
    "typedoc": "0.22.11",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "async": "^3.2.2",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.1",
    "compression": "^1.7.4",
    "connect-mongo": "^4.6.0",
    "cors": "^2.8.5",
    "dotenv": "^15.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.2",
    "express-flash": "^0.0.2",
    "express-session": "^1.17.2",
    "express-validator": "^6.14.0",
    "jsonwebtoken": "^8.5.1",
    "lusca": "^1.7.0",
    "mongoose": "^6.1.5",
    "pug": "^3.0.2",
    "shelljs": "^0.8.5",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "winston": "^3.3.3"
  }
}
