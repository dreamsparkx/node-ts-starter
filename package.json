{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "description": "node boilerplate",
  "main": "index.js",
  "scripts": {
    "build-sass": "sass src/public/css/main.scss dist/public/css/main.css",
    "build-ts": "tsc",
    "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "format": "prettier --ignore-path .prettierignore --write \"src/**/*.+(js|ts|json)\" \"test/**/*.+(js|ts|json)\"",
    "lint": "npm run format && eslint --fix",
    "serve-debug": "nodemon --inspect dist/server.js",
    "serve": "node dist/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-sass": "sass --watch src/public/css/main.scss dist/public/css/main.css",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "doc": "typedoc --out docs --entryPointStrategy expand ./src",
    "doc:serve": "serve docs",
    "coverage:serve": "serve coverage/lcov-report",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "postman": "node -e 'require(\"./dist/util/postman.js\").run()'",
    "createSSL": "./scripts/create-ssl.sh"
  },
  "author": "Gaurav Bharti",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/js": "^9.10.0",
    "@jest/globals": "^29.7.0",
    "@types/async": "3.2.24",
    "@types/bcrypt": "5.0.2",
    "@types/body-parser": "1.19.5",
    "@types/chai": "5.0.1",
    "@types/compression": "1.7.5",
    "@types/cors": "2.8.17",
    "@types/errorhandler": "1.5.3",
    "@types/express": "4.17.21",
    "@types/express-flash": "0.0.5",
    "@types/express-session": "1.18.1",
    "@types/jest": "^29.5.14",
    "@types/jquery": "^3.5.32",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lusca": "1.7.5",
    "@types/node": "^22.0.0",
    "@types/nodemon": "^1.19.5",
    "@types/shelljs": "^0.8.15",
    "@types/supertest": "^6.0.0",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "chai": "5.1.2",
    "concurrently": "^9.0.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "3.1.7",
    "prettier": "^3.3.3",
    "sass": "^1.80.3",
    "serve": "^14.2.4",
    "supertest": "7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.2",
    "typedoc": "^0.27.0",
    "typescript": "5.7.2",
    "typescript-eslint": "^8.5.0"
  },
  "dependencies": {
    "async": "^3.2.2",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.21.1",
    "express-flash": "^0.0.2",
    "express-session": "^1.18.1",
    "express-winston": "^4.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^9.0.0",
    "lusca": "^1.7.0",
    "mongoose": "^8.6.2",
    "openapi-to-postmanv2": "^4.0.0",
    "pug": "^3.0.3",
    "shelljs": "^0.8.5",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.3.3"
  }
}
