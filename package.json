{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "description": "node boilerplate",
  "main": "index.js",
  "scripts": {
    "build-sass": "sass src/public/css/main.scss dist/public/css/main.css",
    "build-ts": "tsc",
    "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve-debug": "nodemon --inspect dist/server.js",
    "serve": "node dist/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-sass": "sass --watch src/public/css/main.scss dist/public/css/main.css",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "doc": "typedoc --out docs --entryPointStrategy expand ./src",
    "doc:serve": "serve docs",
    "coverage:serve": "serve coverage/lcov-report",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "postman": "node -e 'require(\"./dist/util/postman.js\").run()'",
    "createSSL": "./scripts/create-ssl.sh"
  },
  "author": "Gaurav Bharti",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@types/async": "3.2.16",
    "@types/bcrypt": "5.0.0",
    "@types/body-parser": "1.19.2",
    "@types/chai": "4.3.4",
    "@types/compression": "1.7.2",
    "@types/cors": "2.8.13",
    "@types/errorhandler": "1.5.0",
    "@types/eslint": "8.4.10",
    "@types/express": "4.17.15",
    "@types/express-flash": "0.0.2",
    "@types/express-session": "1.17.5",
    "@types/jest": "29.2.5",
    "@types/jquery": "3.5.16",
    "@types/jsonwebtoken": "9.0.0",
    "@types/lusca": "1.7.1",
    "@types/node": "18.11.18",
    "@types/nodemon": "1.19.2",
    "@types/shelljs": "0.8.11",
    "@types/supertest": "2.0.12",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "chai": "4.3.7",
    "concurrently": "7.6.0",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.3.1",
    "lint-staged": "13.1.0",
    "nodemon": "2.0.20",
    "prettier": "2.8.3",
    "sass": "1.57.1",
    "serve": "14.1.2",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typedoc": "0.23.24",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "async": "^3.2.2",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.1",
    "compression": "^1.7.4",
    "connect-mongo": "^4.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-flash": "^0.0.2",
    "express-session": "^1.17.2",
    "express-winston": "^4.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^9.0.0",
    "lusca": "^1.7.0",
    "mongoose": "^6.4.6",
    "openapi-to-postmanv2": "^4.0.0",
    "pug": "^3.0.2",
    "shelljs": "^0.8.5",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "winston": "^3.3.3"
  }
}
